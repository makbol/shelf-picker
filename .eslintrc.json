{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "no-trailing-spaces": "error",
    "comma-spacing": "error",
    "no-multi-spaces": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-single"],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 0, "maxEOF": 1 }],
    "eol-last": ["error", "always"],
    "@typescript-eslint/semi": ["error", "never"]
  }
}
